# E-Commerce AI A

# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
LOCATION=us-central1

# Vertex AI Configuration
VERTEX_AI_MODEL=gemini-1.5-pro
VERTEX_AI_TEMPERATURE=0.7
VERTEX_AI_MAX_TOKENS=8192

# Firestore Configuration
FIRESTORE_DATABASE=(default)
FIRESTORE_COLLECTION_PRODUCTS=products
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_ORDERS=orders

# Cloud Storage Configuration
GCS_BUCKET_NAME=your-bucket-name
GCS_PRODUCT_IMAGES_PATH=product-images/

# Vision API Configuration
VISION_API_ENABLED=true
VISION_CONFIDENCE_THRESHOLD=0.7

# Translation API Configuration
TRANSLATION_API_ENABLED=true
DEFAULT_LANGUAGE=tr
SUPPORTED_LANGUAGES=["en", "tr", "de", "fr", "es", "ar", "ru", "zh", "ja", "ko"]

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_KEY=your-secure-api-key-here
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=30
ENABLE_MEMORY=true
MEMORY_TYPE=firestore

# Monitoring Configuration
ENABLE_MONITORING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=8001

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO

# Optional: Additional API Keys for external services
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# PINECONE_API_KEY=your-pinecone-key
# ELASTICSEARCH_URL=http://localhost:9200
